<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="48dp"
        android:text="@string/txt_distance"
        android:id="@+id/txtDistance"
        android:layout_gravity="top"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="@string/txt_time"
        android:id="@+id/txtTime"
        android:layout_below="@+id/txtDistance"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="@string/txt_run_over"
        android:id="@+id/txtRunOver"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="Start In:"
        android:id="@+id/txtSattelites"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/enemyDistance"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="48dp"
        android:text="@string/txt_distance"
        android:layout_gravity="top"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enemyText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/enemyTime"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="@string/txt_time"
        android:layout_below="@+id/enemyDistance"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/enemyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enemy"
        android:layout_below="@+id/countdownText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/difference"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/enemyTime"
        android:layout_alignEnd="@+id/enemyTime"
        android:layout_below="@+id/enemyTime" />

    <TextView
        android:id="@+id/countdownText"
        android:text=""
        android:textSize="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/txtRunOver"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You"
        android:layout_below="@+id/txtSattelites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="@string/txt_run_over"
        android:id="@+id/textView3"
        android:layout_below="@+id/enemyTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" /><![CDATA[
        android:layout_below="@+id/txtRunOver" />


    ]]>
</RelativeLayout>
