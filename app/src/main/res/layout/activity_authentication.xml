<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_dark_middle_darker_brighter"
    tools:context="software.pama.sitandrunandroid.activities.SignUpActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choose Your Account Name"
        android:textColor="#baff3800"
        android:textSize="20dp"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <EditText
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:ems="10"
        android:layout_above="@+id/signUpButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:layout_alignParentRight="true"
        android:textColor="#baff3800"
        android:textSize="20dp"
        android:textCursorDrawable="@drawable/hint_prompt"
        android:layout_alignParentEnd="true"
        android:textColorHint="#91ff3800"
        android:textIsSelectable="false"
        android:hint="account" />

    <Button
        android:id="@+id/signUpButton"
        android:text="Sign Up"
        android:onClick="signUp"
        android:enabled="false"
        android:textColor="#53ff3800"
        android:textSize="15dp"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_margin="3dp"
        android:background="@drawable/black_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/signUpInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:textColor="#baff3800"
        android:layout_below="@+id/signUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>
